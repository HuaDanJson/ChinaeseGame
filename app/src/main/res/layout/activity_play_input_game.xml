<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_1161"
    android:orientation="vertical"
    tools:context=".activity.PlayInputGameActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/red_common_pure"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_score_play_input_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:text="本关得分"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:text="难度系数："
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/icon_start"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/icon_start"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/icon_start"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/icon_start"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/icon_start"
            android:visibility="gone"/>

    </LinearLayout>

    <cool.chinalanguagegame.android.view.CustomViewPager
        android:id="@+id/cvg_play_input_game_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </cool.chinalanguagegame.android.view.CustomViewPager>

</LinearLayout>