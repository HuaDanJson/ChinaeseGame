<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_tools_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black50"
    android:gravity="center"
    android:paddingEnd="@dimen/common_dialog_body_padding_right"
    android:paddingLeft="@dimen/common_dialog_body_padding_left"
    android:paddingRight="@dimen/common_dialog_body_padding_right"
    android:paddingStart="@dimen/common_dialog_body_padding_left"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_common_blue_rectange"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_helper_card_dialog"
            style="@style/TextStyleRobotoMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="帮助卡"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="10dp"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/tv_double_card_dialog"
            style="@style/TextStyleRobotoMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:text="双倍卡"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="10dp"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/tv_cover_card_dialog"
            style="@style/TextStyleRobotoMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:text="更换背景"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_color"/>


    </LinearLayout>

</RelativeLayout>